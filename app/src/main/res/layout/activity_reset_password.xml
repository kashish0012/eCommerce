<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>


    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:background="@drawable/inputs_design"
        android:layout_below="@+id/relative123"
        android:padding="14dp"
        android:inputType="phone"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:hint="Please write your phone number..."/>



    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer the Following Security Questions."
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="26dp"
        android:layout_below="@+id/find_phone_number"
        android:layout_marginTop="25dp"/>



    <TextView
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q1: What is the name of your first school ?"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:layout_below="@+id/title_questions"
        android:layout_marginTop="25dp"/>


    <EditText
        android:id="@+id/answer_1"
        android:layout_width="match_parent"
        android:background="@drawable/inputs_design"
        android:layout_below="@+id/question_1"
        android:padding="14dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:hint="Please provide answer here.."/>


    <TextView
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Q2: What's your birth month ?"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/answer_1"
        android:layout_marginTop="15dp"/>


    <EditText
        android:id="@+id/answer_2"
        android:layout_width="match_parent"
        android:background="@drawable/inputs_design"
        android:layout_below="@+id/question_2"
        android:padding="14dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:hint="Please provide answer here.."/>


    <Button
        android:id="@+id/verify_btn"
        android:layout_below="@+id/answer_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:ems="8"
        android:elevation="2dp"/>



</RelativeLayout>