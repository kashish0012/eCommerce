<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity">

    <TextView
        android:id="@+id/admin_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Admin"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/category_maintain_btn"
        android:layout_below="@+id/admin_welcome"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/inputs_design"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="Maintain Products"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/category_check_new_order"
        android:layout_below="@+id/category_maintain_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs_design"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="Check New Orders"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/check_approve_products_btn"
        android:layout_below="@+id/category_check_new_order"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputs_design"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="Check and Approve New Products"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:id="@+id/category_logout_admin"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/inputs_design"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:text="Logout"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

</RelativeLayout>